{% extends "base.html.twig" %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <p>{{ post.content }}</p>
    {% if (post.photo) %}
        <div class="mb-3">
            <img src="{{ asset('upload/' ~ post.photo) }}" class="img-fluid rounded" />
        </div>
    {% endif %}
    <p>
        <a href="{{ path('post-index') }}">Back</a>
        <a href="{{ path('post-delete', {id: post.id}) }}" class="ms-2 text-danger">Delete</a>
    </p>
{% endblock %}